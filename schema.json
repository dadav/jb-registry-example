{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "packages": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "description": { "type": "string" },
          "source": { "type": "string", "format": "uri" }
        },
        "required": ["name", "description", "source"],
        "additionalProperties": false
      }
    }
  },
  "required": ["packages"],
  "additionalProperties": false
}
